<div id="chat-window">
  <div id="loading-screen">
    <h2>Hold yer horses, chat is loading<span id="trailing-dots">.</span></h2>
    <script>
      var animating;
      $(document).ready(function(){
        setInterval(moveDots, 1000);
        function moveDots() {
          $dots = $('#trailing-dots');
          text = $dots.text();
          numDots = text.length;

          if(numDots < 4) {
            $dots.text(text + '.');
          }
          else {
            $dots.text('.');
          }
        }
      });
    </script>
  </div>
</div>

