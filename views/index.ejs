<div id="chat-window">
  <div id="loading-screen">
    <h2>Hold yer horses, chat is loading<span id="trailing-dots">.</span></h2>
    <h3>If you are stuck on this screen please go to <a href="http://webchat.freenode.net/">webchat.freenode.net</a> and sign in to the channel "itp".</h3>
    <script>
      var animating;
      $(document).ready(function(){
        setInterval(moveDots, 1000);
        function moveDots() {
          $dots = $('#trailing-dots');
          text = $dots.text();
          numDots = text.length;

          if(numDots < 4) {
            $dots.text(text + '.');
          }
          else {
            $dots.text('.');
          }
        }
      });
    </script>
  </div>
