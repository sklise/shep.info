  <script type="text/javascript" src="/js/views/menuview.js"></script>
  <script type="text/javascript" src="/js/views/feedbackview.js"></script>
  <script type="text/javascript" src="/js/routers.js"></script>
  <script type="text/javascript" src="/js/calendar.js"></script>
  <script type="text/javascript" src="/js/application.js"></script>

  <link href="http://sklise.s3.amazonaws.com/pictos/pictos.css" rel="stylesheet" type="text/css">
</head>
<body data-socket-host="<%= ENV['SOCKET_HOST'] %>"
  <% if env['warden'].authenticated? %>
  data-nickname="<%= env['warden'].user.nickname %>"
  data-user='<%= env['warden'].user.to_json(relationships: {channels: {include: [:name]}}) %>'
  <% end %>>
  <div id="wrapper">
    <div id="menu-window" class="col-3">
      <div id="heading">
        &nbsp;
      </div>

      <div id="calendar">
        <h3>Calendar</h3>
        <ul>
        </ul>
      </div>

      <div id="footer">
        <p>
          <a href="https://github.com/stevenklise/shep.info/blob/master/readme.md">v2.0.0-a1</a>
        </p>
        <p><strong>This is a public site</strong> &#x2605;
          <a href="https://github.com/stevenklise/shep.info" target="_blank">Source</a>
