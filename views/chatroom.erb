<div id="chat-window">
  <div id="chat-menu" class="col-12"></div>
  <div id="channel-viewport"></div>
</div>

<script type="text/template" id="menu-template">
<div id="heading">
  &nbsp;
</div>
<ul class="chat-room-list">
</ul>
</script>

<script type="text/template" id="channel-tab-template">
  <div class="room-status-icon"><div class="channel-icon glyphicons conversation"><i></i></div></div>
  <div class="room-name">{{ name }}</div>
</script>

<script type="text/template" id="help-template">
  <div class="col-10">
  <h3>Help</h3>
  <p><strong>Shep can be asked questions and given commands, below are examples of the commands along with short descriptions of what the command does</strong></p>
  <br>

  {{{commands}}}
  </div>
</script>

<script type="text/template" id="channel-template">
  <div id="chat-log-container" class="col-10">
    <ul id="chat-log"></ul>
  </div>
  <div id="user-list-wrapper" class="col-2">
    <ul id="user-list">
    </ul>
    <a id="logout-link" href="/auth/logout">Log Out</a>
  </div>
  <form id="new-message" class="col-10"></form>
</script>

<script type="text/template" id="new-message-template">
  <div class="new-message-input">
    <pre><span></span><br></pre>
    <textarea></textarea>
  </div>
</script>

<script type="text/template" id="system-message-template">
  <div class="message-time">{{ time }}</div>
  <div class="system-message">{{{ message }}}</div>
</script>

<script type="text/template" id="message-template">
  <div class="timestamp">{{timeString timestamp}}</div>
  <span class="nickname">{{ nickname }}:</span>
  <span class="message-content">{{{ content }}}</span>
</script>

<script type="text/template" id="channel-chooser-template">
<div class="add-channel-dropdown">
  Choose a channel: <select data-placeholder="Choose an Existing Channel" class="channel-list-select" style="width:300px;">
  <option></option>
  {{#each channels}}
  <option value="{{name}}">{{name}}</option>
  {{/each}}
  </select>

  or Create a new one <input type="text" class="new-channel-input"/>
  <input type="submit" value="Create Channel" class="create-channel"/>
</div>
</script>
